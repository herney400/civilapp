<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"

    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <TextView
                android:text="Nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/texvienameProject"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="130dp"

                />

            <TextView
                android:text="Nùmero Contrato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/texvienameProject"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/texviewnumbercontract"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="130dp"
                android:layout_below="@+id/texvienameProject"
               />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewCity"

                android:layout_marginLeft="130dp"
                android:layout_below="@+id/texviewnumbercontract"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/direction"

                android:layout_below="@+id/textViewCity"
                android:layout_marginLeft="130dp"

                />

            <TextView
                android:text="Ciudad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_below="@+id/texviewnumbercontract"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Direcciòn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_below="@+id/textViewCity"
                android:layout_alignParentStart="true" />

            <!--    <Button
                    android:text="Actualizar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/direction"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/actualizar"
                    android:textColor="#fafafa"
                    android:background="@color/colorAccent"/>-->


        </RelativeLayout>

    </android.support.v7.widget.CardView>

